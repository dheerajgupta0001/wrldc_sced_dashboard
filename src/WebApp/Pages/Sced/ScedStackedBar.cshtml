@page
@model WebApp.Pages.Sced.ScedStackedBarModel

@{
    ViewData["Title"] = "SCED";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-3">
            <label for="startDate">Start Date</label>
            <input type="date" name="startDate" id="startDate" />
        </div>
        <div class="col-md-3">
            <label for="endDate">End Date</label>
            <input type="date" name="endDate" id="endDate" />
        </div>
        <div class="col-md-3">
            <label for="generators">Generators</label>
            <select id="generators"
                    name="generators"
                    placeholder="Select Generators"
                    multiple>
            </select>
        </div>
        <div class="col-md-3 align-self-center mt-4">
            <button type="button" class="btn btn-primary" id="submitBtn">
                Submit
            </button>
        </div>
    </div>
    <div id="errorDiv"></div>
    <div id="spinner"></div>
    <div class="container-fluid">
        <div id="stackedBarPlots"></div>
    </div>
</div>

